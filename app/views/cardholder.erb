<div class="row">
    <div class="col-lg-12 section">

      <table class="table table-hover">
          <tr>
            <th>Date</th>
            <th>Ammount</th>
            <th>Vendor</th>
            <th>Posted</th>
            <th>Job Number</th>
            <th>Acct Code</th>
            <th></th>
          </tr>

        <% @user_transactions.each do |transaction| %>
            <tr>
            <td class="section-paragraph"><%= transaction["date"] %></td>
            <!-- reverse the date!! -->
            <td class="section-paragraph">$ <%= transaction["ammount"] %></td>
            <td class="section-paragraph"><%= transaction["vendor"] %></td>
            <td class="section-paragraph"><%= transaction["posted"] == nil ? "Pending!!" : "Posted :)"%></td>
            <form action="/transaction/<%= transaction["serial"] %>" method="POST">
              <td>
                <input name="job_number" required>
              </td>
              <td>
                <input name="acct_code" required>
              </td>
              <td>
                <input type="submit" class="btn btn-default" value="post!">
              </td>
            </form>
            </tr>

        <% end %>
      </table>
    </div>
</div>