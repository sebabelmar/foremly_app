    <div class="container">
      <h1>Welcome Card Holder Manager!</h1>
      <h2>Time to check on your people!!!</h2>

        <div class="row">
            <div class="col-lg-12 section">
              <h3> This the info of <%= User.find_by_card_number(@cardholder_transactions.first["card_number"]).name %></td></h3>
              <table class="table table-hover">
                  <tr>
                    <th>Date</th>
                    <th>Ammount</th>
                    <th>Vendor</th>
                    <th>Job Number</th>
                    <th>Acct Code</th>
                    <th>Posted</th>
                  </tr>
                <% @cardholder_transactions.each do |transaction| %>
                    <tr>
                    <td class="section-paragraph"><%= transaction["date"] %></td>
                    <!-- reverse the date!! -->
                    <td class="section-paragraph">$ <%= transaction["ammount"] %></td>
                    <td class="section-paragraph"><%= transaction["vendor"] %></td>
                    <td class="section-paragraph"><%= transaction["job_number"] %></td>
                    <td class="section-paragraph"><%= transaction["accounting_code"] %></td>
                    <td class="section-paragraph"><%= transaction["posted"] == nil ? "Pending!!" : "Posted :)" %></td>
                    <!-- fix the treu or false on poted field!!! when migrating  -->
                    </tr>

                <% end %>
              </table>
            </div>
        </div>
    </div>
    <!-- /container -->