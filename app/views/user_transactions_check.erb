    <div class="container">
      <h1>Welcome Card Holder Manager!</h1>
      <h2>Time to check on your people!!!</h2>

        <div class="row">
            <div class="col-lg-12 section">
              <h3> This the info of <%= User.find_by_cardholder(@cardholder_transactions.first["cardholder"]).name %></td></h3>
              <table class="table table-hover">
                  <tr>
                    <th>Date</th>
                    <th>Ammount</th>
                    <th>Vendor</th>
                    <th>Posted</th>
                  </tr>
                <% @cardholder_transactions.each do |transaction| %>
                    <tr>
                    <td class="section-paragraph"><%= transaction["date"] %></td>
                    <!-- reverse the date!! -->
                    <td class="section-paragraph">$ <%= transaction["ammount"] %></td>
                    <td class="section-paragraph"><%= transaction["vendor"] %></td>
                    <td class="section-paragraph"><%= transaction["posted"].class == nil ? "Posted :)" : "Pending"%></td>
                    <!-- fix the treu or false on poted field!!!  -->
                    </tr>

                <% end %>
              </table>
            </div>
        </div>
    </div>
    <!-- /container -->